{
  "settings": {
    "analysis":{
      "analyzer": {
        "my_nori_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": [
            "nori_filter"
          ]
        },
        "my_delimiter_analyzer": {
          "tokenizer": "whitespace",
          "filter": [ 
            "union-filter"
          ]
        }
      }, 
      "filter": {
        "syn_filter": {
          "type": "synonym",
          "synonyms": [
            "천원", "1000",
            "1만, 1만원",
            "2만, 2만원",
            "4만, 4만원",
            "5만, 5만원"
          ]
        },
        "nori_filter": {
          "type": "nori_part_of_speech",
          "stoptags": [
            "E", "IC", "J", "MAG", "MAJ",
            "MM", "SP", "SSC", "SSO", "SC",
            "SE", "XPN", "XSA", "XSN", "XSV",
            "UNA", "NA", "VSV", "NNB", "NNBC"
          ]
        },
        "word_delimiter": {
          "type": "word_delimiter",
          "type_table": [ ", => ALPHA" ],
          "split_on_numerics": false
        },
        "union-filter" : {
          "type" : "multiplexer",
          "filters" : [
            "syn_filter",
            "word_delimiter"
          ]
        }
      }
    }
  }, 
  "mappings": {
    "properties" : {
      "__v" : {
        "type" : "long"
      },
      "benefit" : {
        "type" : "text",
        "fields" : {
          "nori" : {
            "type" : "text",
            "analyzer" : "my_nori_analyzer"
          },
          "deli": {
            "type": "text",
            "analyzer": "my_delimiter_analyzer"
          }
        }
      },
      "category" : {
        "type" : "keyword"
      },
      "createdAt" : {
        "type" : "date"
      },
      "imageId" : {
        "type" : "keyword"
      },
      "location": {
        "type" : "geo_point"
      },
      "name" : {
        "type" : "text",
        "fields" : {
          "keyword" : {
            "type" : "keyword",
            "ignore_above" : 256
          }
        }
      },
      "updatedAt" : {
        "type" : "date"
      }
    }
  }
}