{
  "settings": {
    "analysis":{
      "analyzer": {
        "my_custom_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": [
            "my_stop_filter"
          ]
        }
      }, 
      "filter": {
        "my_stop_filter": {
          "type": "nori_part_of_speech",
          "stoptags": [
            "E", "IC", "J", "MAG", "MAJ",
            "MM", "SP", "SSC", "SSO", "SC",
            "SE", "XPN", "XSA", "XSN", "XSV",
            "UNA", "NA", "VSV", "NNB"
          ]
        }
      }
    }
  }, 
  "mappings": {
    "properties" : {
      "__v" : {
        "type" : "long"
      },
      "benefit" : {
        "type" : "text",
        "fields" : {
          "nori" : {
            "type" : "text",
            "analyzer" : "my_custom_analyzer"
          }
        }
      },
      "category" : {
        "type" : "keyword"
      },
      "createdAt" : {
        "type" : "date"
      },
      "imageId" : {
        "type" : "keyword"
      },
      "location": {
        "type" : "geo_point"
      },
      "name" : {
        "type" : "text",
        "fields" : {
          "keyword" : {
            "type" : "keyword",
            "ignore_above" : 256
          }
        }
      },
      "updatedAt" : {
        "type" : "date"
      }
    }
  }
}