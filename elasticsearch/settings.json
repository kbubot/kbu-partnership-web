{
  "settings": {
    "analysis":{
      "analyzer": {
        "my_custom_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": [
            "my_stop_filter"
          ]
        },
        "my_delimiter_analyzer": {
          "tokenizer": "keyword",
          "filter": [ "my_custom_word_delimiter_filter" ]
        }
      }, 
      "filter": {
        "my_stop_filter": {
          "type": "nori_part_of_speech",
          "stoptags": [
            "E", "IC", "J", "MAG", "MAJ",
            "MM", "SP", "SSC", "SSO", "SC",
            "SE", "XPN", "XSA", "XSN", "XSV",
            "UNA", "NA", "VSV", "NNB", "NNBC"
          ]
        },
        "my_custom_word_delimiter_filter": {
          "type": "word_delimiter",
          "type_table": [ ", => ALPHA" ],
          "split_on_case_change": false,
          "split_on_numerics": false,
          "stem_english_possessive": true
        }
      }
    }
  }, 
  "mappings": {
    "properties" : {
      "__v" : {
        "type" : "long"
      },
      "benefit" : {
        "type" : "text",
        "fields" : {
          "nori" : {
            "type" : "text",
            "analyzer" : "my_custom_analyzer"
          },
          "deli": {
            "type": "text",
            "analyzer": "my_delimiter_analyzer"
          }
        }
      },
      "category" : {
        "type" : "keyword"
      },
      "createdAt" : {
        "type" : "date"
      },
      "imageId" : {
        "type" : "keyword"
      },
      "location": {
        "type" : "geo_point"
      },
      "name" : {
        "type" : "text",
        "fields" : {
          "keyword" : {
            "type" : "keyword",
            "ignore_above" : 256
          }
        }
      },
      "updatedAt" : {
        "type" : "date"
      }
    }
  }
}